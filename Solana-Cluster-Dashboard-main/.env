# Solana RPC URL - Using mainnet
RPC_URL=https://solana-rpc.publicnode.com

# Polling interval - 2 seconds for fast detection
POLL_INTERVAL_MS=2000

# Detection window - 10 seconds to catch fast funding
WINDOW_MS=10000

# Minimum children per cluster
MIN_CHILDREN=5

# Balance update frequency - 30 seconds
SPEND_REFRESH_MS=30000

# Spend rate calculation window - 5 minutes
SPEND_RATE_WINDOW_MS=300000

# Minimum transfer amount - 1 SOL (1,000,000,000 lamports)
MIN_TRANSFER_LAMPORTS=1000000000

# Minimum total cluster funding - 20 SOL (20,000,000,000 lamports)
MIN_CLUSTER_FUNDING_LAMPORTS=20000000000

# Data retention - 30 minutes (1,800,000 ms)
DATA_RETENTION_MS=1800000

# Alternative RPC URLs (uncomment to use)
# RPC_URL=https://solana-rpc.publicnode.com
# RPC_URL=https://rpc.ankr.com/solana
# RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_API_KEY